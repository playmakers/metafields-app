- product = @product
:javascript
  $(function () {
    $('#variant').highcharts({
        chart: {
            type: 'area'
        },
        title: {
            text: 'Variant Quantities'
        },
        xAxis: {
            type: 'datetime'
        },
        plotOptions: {
          area: {
              stacking: 'normal',
              lineColor: '#666666',
              lineWidth: 1,
              marker: {
                  lineWidth: 1,
                  lineColor: '#666666'
              }
          }
        },
        series: #{product_variants_quantities(@product).to_json}
    });
  });

